<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ARPEGOS.Themes.LightTheme">
    
    <!-- Title Background Color -->
    <Color x:Key="TitleBackgroundColor">#1e90ff</Color>

    <!-- Title Text Color -->
    <Color x:Key="TitleTextColor">#ffffff</Color>

    <!-- Separator Color -->
    <Color x:Key="SeparatorColor">#a2a3a2</Color>

    <!-- Page Background Color -->
    <Color x:Key="PageBackgroundColor">#b7dbff</Color>

    <!-- Header Background Color -->
    <Color x:Key="HeaderBackgroundColor">#51a9ff</Color>

    <!-- Header Text Color -->
    <Color x:Key="HeaderTextColor">#0048aa</Color>

    <!-- Item Background Color -->
    <Color x:Key="ItemBackgroundColor">#1e90ff</Color>

    <!-- Item Text Color -->
    <Color x:Key="ItemTextColor">#1e90ff</Color>

    <!-- Button Background Color -->
    <Color x:Key="ButtonBackgroundColor">#51a9ff</Color>

    <!-- Button Text Color -->
    <Color x:Key="ButtonTextColor">#00338f</Color>

    <!-- Main Item Label -->
    <Color x:Key="MainItemTextColor">#0048aa</Color>
</ResourceDictionary>