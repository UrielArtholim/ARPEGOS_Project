<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARPEGOS.Views.SkillListView"
             x:Name=" ItemList"
             Title="Selecciona una habilidad">
    <ScrollView>
        <ListView ItemsSource="{Binding Data}"
            CachingStrategy="RecycleElement">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="5" Padding="10" Margin="20,20,20,0" BorderColor="{DynamicResource SeparatorColor}" HorizontalOptions="FillAndExpand">
                        <Label Text="{Binding .}" HorizontalOptions="Center"/>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Path=BindingContext.SelectItemCommand, Source={x:Reference ItemList}}" CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
</ContentPage>
