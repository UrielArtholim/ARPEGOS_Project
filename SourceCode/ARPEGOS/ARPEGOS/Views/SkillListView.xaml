<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARPEGOS.Views.SkillListView"
             Title="Selecciona una habilidad"
             x:Name="ItemList">
    <ListView ItemsSource="{Binding Data}"
        CachingStrategy="RetainElement"
        HasUnevenRows="True"
        SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame CornerRadius="5" Padding="10" Margin="20,10,20,10" BorderColor="{DynamicResource LightSeparatorColor}" HorizontalOptions="FillAndExpand">
                        <Label Text="{Binding .}" HorizontalOptions="StartAndExpand" FontSize="20"/>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Path=BindingContext.SelectItemCommand, Source={x:Reference ItemList}}" CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
