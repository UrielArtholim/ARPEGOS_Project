    <!-- urn:absolute:project_arpg/games/anima_beyond_fantasy#Incrementar_Debilidad -->

    <owl:NamedIndividual rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Incrementar_Debilidad">
