        <rdf:type rdf:resource="urn:absolute:project_arpg/games/anima_beyond_fantasy#Definicion_Clases"/>
    </owl:NamedIndividual>
    


    <!-- urn:absolute:project_arpg/games/anima_beyond_fantasy#Tabla_Armas_Arquetípicas -->

    <owl:NamedIndividual rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Tabla_Armas_Arquetípicas">
        <rdf:type rdf:resource="urn:absolute:project_arpg/games/anima_beyond_fantasy#Tabla_Armas_Generales"/>
