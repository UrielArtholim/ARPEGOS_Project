    <rdf:Description rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Rango_Armas">
        <rdfs:comment rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Distancia a la que puede golpear un arma.</rdfs:comment>
