    <!-- urn:absolute:project_arpg/games/anima_beyond_fantasy#Arrojar_de_los_Cielos -->

    <owl:NamedIndividual rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Arrojar_de_los_Cielos">
