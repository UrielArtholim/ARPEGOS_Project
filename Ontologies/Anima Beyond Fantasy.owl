    <!-- urn:absolute:project_arpg/games/anima_beyond_fantasy#Vulnerable_al_calor -->

    <owl:NamedIndividual rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Vulnerable_al_calor">
