    <!-- urn:absolute:project_arpg/games/anima_beyond_fantasy#Extenuación_psíquica -->

    <owl:NamedIndividual rdf:about="urn:absolute:project_arpg/games/anima_beyond_fantasy#Extenuación_psíquica">
